@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">HildenCo WebStore</h1>
    <p>To learn more about ASP.NET Core and microservices visit our blog at <a href="https://blog.hildenco.com">blog.hildenco.com</a>.</p>
</div>

<div class="row border rounded" id="reqApp">
    <div class="col-md-6 p-3" style="min-height:400px">
        <h3 class="mb-3">Request:</h3>
        <div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Product Slug:</label>
                <input class="form-control" id="exampleFormControlInput1" placeholder="eg. g-ps4" v-model="slug" v-on:keyup.enter = "submit">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Fake Timeout:</label>
                <select class="form-control" id="exampleFormControlSelect1" v-model="timeout">
                    <option value="1">1s</option>
                    <option value="2">2s</option>
                    <option value="3">3s</option>
                    <option value="4">4s</option>
                    <option value="5">5s</option>
                </select>
            </div>
            <button class="btn btn-primary mb-2" v-on:click="submit">Submit</button>
        </div>
    </div>
    <div class="col-md-6 p-3">
        <h3 class="mb-3">Response:</h3>
        <partial name="~/Views/Shared/_Spinner.cshtml" />
        <div v-if="error" class="text-danger">
            {{ error }}
        </div>
<pre v-if="product">
{{ product }}
</pre>
    </div>
</div>
